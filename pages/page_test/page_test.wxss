
.item-wrapper{
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #EAEAEA;
  border-width: 1px;
  border-style: solid;
  padding: 10rpx 0;
}


.style1{
  border-style: solid;
  border-width: 1px;
  height: 100%;
  display: flex;
  flex-direction: row;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.style2{
  border-style: solid;
  border-width: 1px;
  border-color: red;
  height: 30%;
  width: 100%;
  margin-top: 13px;
  margin-left: 3px;
  margin-right: 3px;
  background-color: #FFFFFF;
  border-radius: 5px;
  
  
}

.style3{
  width: 100%;
  height: 100%;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.style4{
  border-style: solid;
  border-width: 0px;
  width: 35%;
  height: 100%;
  border-radius: 5px;
}

.style5{
    border-style: solid;
    border-width: 1px;
    border-color: green;
    display: flex;
    justify-content: flex-end;
    
    top: 0;
    left: 0;
    width: 20%;
    height: 100%;
    box-sizing: border-box;
}