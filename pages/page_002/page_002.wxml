<!--pages/page_002/page_002.wxml-->
<view bindtouchstart='mytouchstart' bindtouchmove='mytouchmove' bindtouchend='mytouchend'>
  <scroll-view class='main' scroll-y="true">
    <view>
      <view class='englishword'>
        <text>{{wordlist[wordindex]}}</text>
      </view>
    </view>
    <view>

      <block wx:if="{{pagestyle=='simple'}}">
        <view class='simplestyle' bindtap='todetail'>
          <text>点击显示释义</text>
        </view>
      </block>
      <block wx:if="{{pagestyle=='complex'}}">
        <view class="detailcontent">
          <view class='simplestyle' bindtap='tosimplestyle'>
            <text>精简模式</text>
          </view>
          <view>
            英{{wordlistdetail[wordindex].pronounce[0]}}
            <image class='image1' src='../image/page_002/1.png'></image>
            美{{wordlistdetail[wordindex].pronounce[1]}}
            <image class='image1' src='../image/page_002/1.png'></image>
            <view class='translation' wx:for="{{wordlistdetail[wordindex].detail.translation}}" wx:key="unique">
              {{item}}
            </view>
          </view>
        </view>
      </block>
    </view>
  </scroll-view>
  <view class='footer'>
    <text>{{wordindex+1}}/{{totalaccount}}</text>
  </view>
</view>