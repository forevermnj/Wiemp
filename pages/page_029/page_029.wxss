/* pages/page_029/page_029.wxss */

page{
  height:100%;
 
}
.contentStyle{
 display: flex;
 flex-direction:row;
 width: 100%;
 height: 100%;
 background-color:#F8F8F8;
 padding-right: 10rpx;
 -webkit-transition: all 0.4s;
 transition: all 0.4s;
 -webkit-transform: translateX(90px);
 transform: translateX(90px);
 margin-left: -90px;
 font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
form{
  width:100%;
}
.section{
  width:100%;
  background-color:#ffffff;
  height:93rpx;
  line-height:93rpx;
  border-top:1px solid #d9d9d9;
}
component-select{
  min-width:40%;
  max-width:55%;
  height:10%;
}
component-select .showItemData{
  height:10%;
}

.nameStyle{
  width:42%;
  margin-right:10px;
  padding-left: 20rpx;
}

input{
  background-color:#ffffff;
  width:350rpx;
  font-size:32rpx;
  padding:0 6rpx;
  height:93rpx;
}


.tabbar1{
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-right: 10px;
  
}

.tabbar2{
  font-size: 10px;
  margin-left:1px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-width: 0px;
  border-style: solid;
}
.smallgroup{
  border-width: 0px;
  border-style: solid;
  display: flex;
  flex-direction:column;
  justify-content: center;

}
.footerstyle1 {
  position: absolute;
  bottom: 0px;
  padding-top: 5px;
  padding-bottom: 5px;
  background-color: rgb(249, 249, 249);
  width: 100%;
  display: flex;
  justify-content: space-around;
  border:1px;
  border-color:#D8D8D8;
  border-style:solid;
  border-left: none;
  border-right: none;
  border-bottom: none;
}

textarea{
  background:#ffffff;
  width:100%;
  padding:6rpx;
  border-top:1px solid #d9d9d9;
  border-bottom: 1px solid #d9d9d9;
}

.courseDescribe{
  background-color: #F8F8F8;
}

.confrimButton{
  margin-top:50rpx;
  width:90%;
  background-color:#1aad19;
  color:#ffffff;
}
