/* pages/others/xscroll/xscroll.wxss */

.recommend_scroll_x_box {
  height: 400rpx;
  padding: 10rpx 0;
  white-space: nowrap;
  display: flex;
  margin-left: 30rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box:first-child {
  margin-left: 24rpx;
}

.recommend_hot_box {
  width: 200rpx;
  height: 400rpx;
  margin-right: 24rpx;
  display: inline-block;
}

.recommend_hot_image {
  width: 200rpx;
  height: 330rpx;
  border-radius: 5px;
}

.title {
  font-size: 26rpx;
}

.desc {
  font-size: 24rpx;
}

.title, .desc {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.zhud{
  position: absolute;
  left: 0px;
  top: 0px;
  width: 100%;
  height: 125%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
  background-color: #e2f7ea;
}

.style1{
  border-width: 1px;
  border-color: green;
  border-style:solid;
  border-bottom-style:none;
  border-left-style:none;
  border-right-style:none;
}

.style2{
  margin-right: 10px;
  text-align: right;
  font-size: 12px;
  color:gray;
}

.style3{
  font-size: 15px;
  margin-bottom: 5px;
  margin-left: 50rpx;
  margin-top: 5px;
}

